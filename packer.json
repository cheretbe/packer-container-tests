{
  "builders": [
    {
      "name": "container-tests",
      "communicator": "ssh",
      "source_path": "ubuntu/focal64",
      "provider": "virtualbox",
      "type": "vagrant",
      "output_dir": "output",
      "output_vagrantfile": "vagrantfile.template"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./provision/provision.sh"
    }
  ],
  "post-processors": [
    {
      "type": "shell-local",
      "inline": ["mv output/package.box output/container-tests.box"]
    }
  ]
}